<div class="container">
<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table class="table table-striped"> 
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.location %></td>
        <td><%= client.email %></td>
        <td><%= link_to 'Show', client_path(client) %>  <% if current_user.admin? ||  current_user.ismanager? %>|<%= link_to 'Edit', edit_client_path(client) %> <% end %> <% if current_user.admin? %> | <%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %>  <% end %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? ||  current_user.ismanager? %>
<%= link_to 'New Client', new_client_path %>
<%  end %>
</div>
